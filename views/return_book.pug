extends layout

block content
  h1 #{loan.Patron.first_name} #{loan.Patron.last_name}: #{loan.Book.title}
  if errors
    ul
      each error in errors
        li= error
  p
    strong Book Title: &nbsp;
    | #{loan.Book.title}
  p
    strong Loaned By: &nbsp;
    | #{loan.Patron.first_name} #{loan.Patron.last_name}
  p
    strong Loaned On: &nbsp;
    | #{loan.loaned_on}
  p
    strong Return By: &nbsp;
    | #{loan.return_by}
  form(method='post' action=`/books/${loan.Book.id}/return`)
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text', name='returned_on' value=`${todaysDateString}`)
    p
      input(type='submit', value='Return Book')
