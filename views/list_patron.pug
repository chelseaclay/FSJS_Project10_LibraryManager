extends layout

block content
  h1 Patrons
  form.search(method='get', action='/patrons?search=${search}')
    p
      input(type='text', name='search', placeholder='Search for Patrons')
      input(type='submit', value='Search')
  p
    a.button(href='/patrons/new') Create New Patron
  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      each patron in patrons
        tr
          td
            a(href=`/patrons/${patron.id}`) #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}
  div.paginate
    each page in pages
      a(href=`${bookStatus}?page=${page}`) #{page}
      span &#124;
